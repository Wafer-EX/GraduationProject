@page "/news/{Id:int}"

@using CoderWebsite.Components
@using CoderWebsite.Components.BlockContent
@using CoderWebsite.Models

@inject ApplicationContext DbContext

<PageBlock>
    <Publication Title="@(news.Title)" Date="@(news.Date.ToLongDateString())">
        @(news.Text)
    </Publication>
</PageBlock>

@code {
    private News news;

    [Parameter]
    public int Id { get; set; }

    protected override void OnInitialized()
    {
        news = DbContext.News.Where(obj => obj.Id == Id).First();
    }
}